{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": false,
    "target": "es2019",
    "module": "commonjs",
    "importHelpers": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "moduleResolution": "node",
    "outDir": "dist"
  },
  "lib": ["es2020"],
  "include": ["*.ts"],
  "exclude": ["node_modules"],
}
